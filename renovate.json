{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "kymzky"
  ],
  "dependencyDashboard": true,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "**/nvim/**/plugins/**/*.lua"
      ],
      "matchStrings": [
        "['\"](?<depName>[a-zA-Z0-9_-]+/[a-zA-Z0-9_.-]+)['\"](?:\\s*,\\s*tag\\s*=\\s*['\"](?<currentValue>[^'\"]+)['\"])?"
      ],
      "datasourceTemplate": "github-releases"
    }
  ]
}
